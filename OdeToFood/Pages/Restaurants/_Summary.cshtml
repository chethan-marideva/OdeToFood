@using OdeToFood.Core
@model Restaurant


<div class="panel panel-default">

    <div class="panel-heading">
        <h3>@Model.Name</h3>
    </div>
    <div class="panel-body">
        <span>Location:@Model.Location</span>
        <span>Cusine:@Model.Cusine</span>
    </div>
    <div class="panel-footer">
        <a asp-page="./Detail" asp-route-restaurantId="@Model.Id" class="btn btn-info btn-sm"> <span class="glyphicon glyphicon-zoom-in"></span></a>
        <a asp-page="./Edit" asp-route-restaurantId="@Model.Id" class="btn btn-info btn-sm">  <span class="glyphicon glyphicon-edit"></span></a>
        <a asp-page="./Delete" asp-route-restaurantId="@Model.Id" class="btn btn-info btn-sm">  <span class="glyphicon glyphicon-trash"></span></a>

    </div>
</div>